        toggle_mac_off {
            bindings = <&toggle_layer_off 1>;
            key-positions = <20 33>;
            layers = <1>;
            timeout-ms = <250>;
            require-prior-idle-ms = <250>;
        };
    };

    macros {
        email: email {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp V &kp I &kp C &kp T &kp O &kp R &kp C &kp H &kp A &kp N1 &kp N9 &kp N9 &kp N6 &kp AT &kp G &kp M &kp A &kp I &kp L &kp DOT &kp C &kp O &kp M>;
            label = "EMAIL";
        };

        workemail: workemail {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp V &kp I &kp C &kp T &kp O &kp R &kp AT &kp C &kp A &kp N &kp T &kp A &kp R &kp A &kp D &kp E &kp S &kp I &kp G &kp N &kp DOT &kp C &kp O &kp M>;
            label = "WORKEMAIL";
        };
    };

    behaviors {
        toggle_layer_on: toggle_layer_on {
            compatible = "zmk,behavior-toggle-layer";
            label = "TOGGLE_LAYER_ON";
            #binding-cells = <1>;
